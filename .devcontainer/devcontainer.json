{
  "name": "Human Design Dev",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": "..",
    "target": "dev",
    "args": {
      "USER": "${localEnv:USER}"
    }
  },

  "containerEnv": {
    "HD_USERNAME": "${localEnv:HD_USERNAME}",
    "HD_PASSWORD": "${localEnv:HD_PASSWORD}",
    "OPENAI_API_KEY": "${localEnv:OPENAI_API_KEY}"
  },

  "remoteUser": "${localEnv:USER}",

  "initializeCommand": "mkdir -p ${localEnv:HOME}/.ssh",

  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/home/${localEnv:USER}/.ssh,type=bind",
    "source=${localEnv:HOME}/HD,target=/home/${localEnv:USER}/hd_info,type=bind",
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-vscode.live-server",
        "ms-python.python",
        "ms-python.mypy-type-checker",
        "charliermarsh.ruff",
        "tamasfe.even-better-toml",
        "ms-vscode.remote-explorer",
        "ms-vscode-remote.remote-containers",
        "ms-vscode.docker",
        "Anthropic.claude-code"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.analysis.typeCheckingMode": "basic",
        "editor.formatOnSave": true,
        "[python]": { "editor.defaultFormatter": "charliermarsh.ruff" }
      }
    }
  },

  "postCreateCommand": "pip install -e '.[dev]' && curl -fsSL https://claude.ai/install.sh | bash",
  
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "mobyVersion": "latest",
      "installDockerCompose": true
    }
  }
}
