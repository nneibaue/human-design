{
  "name": "Human Design Dev",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": "..",
    "target": "development",
    "args": {
      "USER": "${localEnv:USER}"
    }
  },

  "containerEnv": {
    "HD_USERNAME": "${localEnv:HD_USERNAME}",
    "HD_PASSWORD": "${localEnv:HD_PASSWORD}"
  },

  "remoteUser": "${localEnv:USER}",

  "initializeCommand": "mkdir -p ${localEnv:HOME}/.ssh",

  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/home/${localEnv:USER}/.ssh,type=bind"
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-vscode.live-server",
        "ms-python.python",
        "ms-python.mypy-type-checker",
        "charliermarsh.ruff",
        "tamasfe.even-better-toml"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.analysis.typeCheckingMode": "basic",
        "editor.formatOnSave": true,
        "[python]": { "editor.defaultFormatter": "charliermarsh.ruff" }
      }
    }
  },

  "postCreateCommand": "pip install --no-deps -e ."
}
